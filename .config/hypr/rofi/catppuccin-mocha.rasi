* {
    bg-col:  #1e1e2e;
    bg-col-light: #1e1e2e;
    border-col: #1e1e2e;
    selected-col: #1e1e2e;
    blue: #89b4fa;
    fg-col: #cdd6f4;
    fg-col2: #f38ba8;
    grey: #6c7086;
    width: 35%;
    font: "JetBrainsMono Nerd Font 14";
}

element-text, element-icon , mode-switcher {
    background-color: inherit;
    text-color:       inherit;
}

window {
    height: 380px;
    border: 1px;
    border-radius: 0px;    
    border-color: @fg-col2;
    background-color: @bg-col;
    orientation: vertical;
    
}
prompt {
    enabled: false;
}

button {
    action: "ok";
    str: "ï€‚ ";
    font: "FantasqueSansMono Nerd Font 16";
    expand: false;
    text-color: #8f8ca1;
    background-color: @bg-col;
    vertical-align: 0.5;
    horizontal-align: 0.5;
}

entry {
    font: "Inter Regular 12";
    background-color: @bg-col;
    text-color: #8f8ca1;
    expand: true;
    vertical-align: 0.5;
    horizontal-align: 0;
}

entry-wrapper {
    orientation: horizontal;
    margin: 0 12px 0 12px;
    spacing: 14px;
    vertical-align: 0.5;
    background-color: @bg-col;
    children: [ button, entry ];
}

inputbar {
    padding: 5px;
    margin: 5px 5px 5px 5px;
    background-color: #26233a;
    text-color: @fg-col;
    expand: false;
    border-radius: 9px;
    position: north;
    children: [ entry-wrapper ];
}

mainbox {
    background-color: @bg-col;
}


inputbar {
    children: [prompt,entry];
    background-color: @bg-col;
    border-radius: 5px;
    padding: 2px;
}

prompt {
    background-color: @blue;
    padding: 6px;
    text-color: @bg-col;
    border-radius: 3px;
    margin: 20px 0px 0px 20px;
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 6px;
    margin: 20px 0px 0px 10px;
    text-color: @fg-col;
    background-color: @bg-col;
}

listview {
    border: 0px 0px 0px;
    padding: 6px 0px 0px;
    margin: 10px 0px 0px 20px;
    columns: 2;
    lines: 6;
    background-color: @bg-col;
}

element {
    padding: 5px;
    background-color: @bg-col;
    text-color: @fg-col  ;
    border-radius: 6px;
    spacing: 14px;
    margin: 0px 20px 0px 0px;
    padding: 8px 0px 10px 20px;
}

element-icon {
    size: 20px;
}

element selected {
    background-color:  #47435c ;
    text-color: @fg-col2  ;
}

mode-switcher {
    spacing: 0;
  }

button {
    padding: 10px;
    background-color: @bg-col-light;
    text-color: @grey;
    vertical-align: 0.5; 
    horizontal-align: 0.5;
}

button selected {
  background-color: @bg-col;
  text-color: @blue;
}

message {
    background-color: @bg-col-light;
    margin: 2px;
    padding: 2px;
    border-radius: 5px;
}

textbox {
    padding: 6px;
    margin: 20px 0px 0px 20px;
    text-color: @blue;
    background-color: @bg-col-light;
}
