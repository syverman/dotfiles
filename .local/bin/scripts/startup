#!/usr/bin/env bash

## Autostart Programs
DIR=/home/juancarlos/Im√°genes/Fondos/
PICS=($(ls ${DIR}))

RANDOMPICS=${PICS[ $RANDOM % ${#PICS[@]} ]}

# Kill already running process
_ps=(waybar mako mpd polkit-gnome swaybg)
for _prs in "${_ps[@]}"; do
	if [[ `pidof ${_prs}` ]]; then
		killall -9 ${_prs}
	fi
done

# Polkit agent
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# Set wallpaper
swaybg --output '*' --mode fill -i ${DIR}/${RANDOMPICS} &

# Apply themes
#~/.local/bin/scripts/gtkthemes &

# Lauch notification daemon (mako)
~/.local/bin/scripts/notifications &

# Lauch statusbar (waybar)
~/.local/bin/scripts/statusbar &

# Auto inicio de programas 
exec hypridle &
# Start mpd
# exec mpd &

#Start mailspring
# exec mailspring -S &

#Start whatsapp-for-linux
# exec whatsapp-for-linux -S &

#Start steam
# exec steam -S &

