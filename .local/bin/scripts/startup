#!/usr/bin/env bash

## Autostart Programs
DIR=/home/juancarlos/Im√°genes/Walls/
PICS=($(ls ${DIR}))

RANDOMPICS=${PICS[ $RANDOM % ${#PICS[@]} ]}

# Kill already running process
_ps=(hyprpanel polkit-gnome)
for _prs in "${_ps[@]}"; do
	if [[ `pidof ${_prs}` ]]; then
		killall -9 ${_prs}
	fi
done

# Polkit agent
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# Set wallpaper
# swaybg --output '*' --mode fill -i ${DIR}/${RANDOMPICS} &


# Lauch notification daemon (mako)
# ~/.local/bin/scripts/notifications &

# exec swaync &

# Lauch statusbar (waybar)
# ~/.local/bin/scripts/statusbar &

# Auto inicio de programas
# Using hypridle to start hyprlock 
hypridle &
hyprpanel &

# EasyEffects modo daemon (systray)
easyeffects --gapplication-service &
zapzap  &


